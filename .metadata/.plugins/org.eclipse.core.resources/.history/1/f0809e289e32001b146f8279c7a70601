#include <string>
using namespace std;
#ifndef PLANET_HPP_
#define PLANET_HPP_

class Planet{
	private:
	double mass;
	double posx;
	double posy;
	double velx;
	double vely;
	string name;

	public:
	Planet();
	Planet(double positionx,double positiony,double kg,double velocityx,double velocityy, string name);
	string getName();
	void setName(string name);
	double getPositionX();
	double getPositionY();
	void setPosition(double newPosX, double newPosY);
	double getMass();
	void setMass(double newMass);
	double getVelocityX();
	double getVelocityY();
	void setVelocity(double newVelX, double newVelY);

	string toString();
	string toCsv();
};

#endif /* PLANET_HPP_ */
