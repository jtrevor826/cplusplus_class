#include <string>
using namespace std;
#ifndef COMPLEX_H_
#define COMPLEX_H_

class Complex{
 private:
 double real,
        img;

public:
  Complex(){
    real= 0.0;
    img= 0.0;
  }
  Complex(double r, double i){
    real=r;
    img=i;
  }

  Complex(Complex o){
   real = o.getReal();
    img= o.getImaginary();
  }

  double getReal(){
    return real;
  }

  double getImaginary(){
    return img;
  }

// Complex *get(){
//    return new Complex(this);
//  }

  void setReal(double r){
    real=r;
  }

  void setImaginary(double i){
    img=i;
  }

  void set(double r, double i){
    real=r;
    img=i;
  }

